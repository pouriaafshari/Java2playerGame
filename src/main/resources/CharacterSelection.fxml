<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="CharacterSelectionController" style="-fx-background-image: url('/bg.png'); -fx-background-size: cover; -fx-background-position: center;">
    <Label fx:id="instructionLabel" text="Player One, Choose Your Character" style="-fx-font-size: 20px; -fx-text-fill: white;" />
    <GridPane fx:id="characterGrid" hgap="10" vgap="10">
        <padding>
            <Insets topRightBottomLeft="10" />
        </padding>
    </GridPane>
    <Button fx:id="rollDiceButton" text="Roll Dice" onAction="#handleRollDice" style="-fx-font-size: 16px; -fx-margin-bottom: 10px;" />
</VBox>
